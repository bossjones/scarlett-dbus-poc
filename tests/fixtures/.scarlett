[scarlett]
name = scarlett
keywords = [ 'scarlett', 'SCARLETT' ]
owner = "Hair Ron Jones"

[features]
enable=time

[redis]
host = 127.0.0.1
port = 6379
redis_db = 9

[hue]
# home bridge
bridge = 192.168.2.11

[pocketsphinx]
hmm = /home/pi/.virtualenvs/scarlett-dbus-poc/share/pocketsphinx/model/en-us/en-us
lm = /home/pi/dev/bossjones-github/scarlett-dbus-poc/tests/fixtures/lm/1473.lm
dict = /home/pi/dev/bossjones-github/scarlett-dbus-poc/tests/fixtures/dict/1473.dic
silprob = 0.1
wip = 1e-4
bestpath = 0

[wordnik]
api_key = BLAH

[wolframalpha]
app_id = BLAH

[audio]
usb_input_device=hw:1

[forecastio]
api_key = BLAH
lat     = 40.7056308
lng     = -73.9780034

[arduino]
arduino_port     = /dev/ttyACM0
arduino_baudrate = 9600
arduino_timeout  = 2
arduino_enabled  = false

[speech]
system = flite
sudo_enabled = false


